{
    "name": "sp-boilerplate",
    "version": "1.1.3",
    "description": "Superproject demo.",
    "author": "dongwenxiao,diablohu",
    "email": "cs_victor@126.com",
    "scripts": {
        "start": "npm run build && npm run server-run",
        "start:pm2": "npm run build && pm2 restart pm2.json --only sp-start",
        "dev": "npm run pm2:dev",

        "pm2:dev": "npm run pm2:dev:client && npm run pm2:dev:server && npm run pm2:dev:run",
        "pm2:dev:client": "pm2 restart pm2.json --only sp-dev-client",
        "pm2:dev:server": "pm2 restart pm2.json --only sp-dev-server",
        "pm2:dev:run": "node ./system/scripts/before-dev && pm2 restart pm2.json --only sp-dev-run --watch",
        "pm2:dist:client": "npm run prebuild && npm run client-dist",

        "prebuild": "node ./scripts/prebuild",
        "build": "npm run client-dist && npm run server-dist",
        "client-dev": "cross-env WEBPACK_BUILD_ENV=dev WEBPACK_STAGE_MODE=client WEBPACK_DEV_SERVER_PORT=3001 node ./system/webpack/enter",
        "client-dist": "cross-env WEBPACK_BUILD_ENV=dist WEBPACK_STAGE_MODE=client node ./system/webpack/enter",
        "server-dev": "cross-env WEBPACK_BUILD_ENV=dev WEBPACK_STAGE_MODE=server WEBPACK_DEV_SERVER_PORT=3001 node ./system/webpack/enter",
        "server-dist": "cross-env WEBPACK_BUILD_ENV=dist WEBPACK_STAGE_MODE=server node ./system/webpack/enter",
        "server-run": "cross-env DEFAULT_SUB_APP_KEY=localhost node ./dist/server",

        "spa": "rimraf ./dist-spa && cross-env WEBPACK_BUILD_ENV=spa WEBPACK_STAGE_MODE=client node ./system/webpack/enter",

        "deploy": "git pull && node ./deploy",
        "update": "super update"
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/dongwenxiao/sp-boilerplate"
    },
    "keywords": [
        "es6/7",
        "fullstack",
        "react",
        "react-server-render",
        "react-router",
        "redux",
        "koa2",
        "webpack2",
        "redis",
        "mongodb",
        "http2",
        "socket.io"
    ],
    "engines": {
        "node": ">=6.7.0"
    },
    "dependencies": {
        "super-project": "^2.0.8",
        "super-project-cli": "^1.1.0",

        "bind-event": "^1.0.5",

        "react-addons-css-transition-group": "~15.6.0",
        "react-markdown": "~2.5.0",

        "postcss-pxtorem": "^4.0.1",
        "normalize.css": "~7.0.0",

        "copy-webpack-plugin": "^4.0.1",
        "webpack-config": "^7.4.0",

        "koa-compress": "~2.0.0",
        "koa-html-minifier": "~1.0.1",
        "rimraf": "^2.6.1",
        "copyfiles": "1.2.0",
        "npm-run-script": "^0.0.4"
    },
    "devDependencies": {
        "cross-env": "5.0.5",
        "opn": "^5.1.0"
    }
}